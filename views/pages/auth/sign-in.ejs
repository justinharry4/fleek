<%- include('../../partials/head') %>
    <link rel="stylesheet" href="/css/general.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
    <div id="signin-container">
        <%- include('../../partials/header') %>
        </header>
        <div id="signin-main-container">
            <div id="signin-main-wrapper"> 
                <h2 id="signin-main-header">Sign In</h2>
                <form id="form-signin" action="" method="POST">
                    <fieldset id="form-signin-ul-wrapper">
                        <ul>
                            <li>
                                <label for="form-signin-email" class="off-screen">Email</label>
                                <input type="email" class="block-strech" id="form-signin-email" name="email" placeholder="Email or phone number">
                            </li>
                            <li>
                                <label for="form-signin-password" class="off-screen">Password</label>
                                <input type="password" class="block-strech" id="form-signin-password" name="password" placeholder="Password">
                            </li>
                        </ul>
                        <input type="submit" value="Sign In" class="native-bg block-strech">
                    </fieldset>
                    <fieldset id="form-signin-remember-wrapper" class="flex-wrapper">
                        <input type="checkbox" name="remember-user" value="true" id="form-signin-checkbox"><label for="form-signin-checkbox">Remember me</label>
                        <span><a href="">Need help?</a></span>
                    </fieldset>
                </form>
                <div >
                    <p>New to Fleek? <span><a href="/">Sign up now</a></span></p>
                    <p class="signin-text-small">This page is protected by Google reCAPTCHA to ensure you're not a bot. <span><a>Learn more.</a></span></p>
                </div>
            </div>
        </div>
        <%- include('../../partials/auth/footer') %>
    </div>
<%- include('../../partials/end') %>